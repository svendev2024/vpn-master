<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBaseWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorBaseWhite</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>

    </style>

    <!-- Base application theme No Action Bar. -->
    <style name="AppThemeNoToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBaseWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorBaseWhite</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="AppThemeSplash" parent="AppTheme">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="buttonsPopUp">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">5dp</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:width">250dp</item>
    </style>

    <style name="tv_state_connection_thumb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_title_medium_20sp</item>
        <item name="android:text">@string/dummy</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBackgroundSeaBlue</item>
    </style>

    <style name="tv_title_traffic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/dummy</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF9800</item>
    </style>

    <style name="tv_content_traffic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">-</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

</resources>